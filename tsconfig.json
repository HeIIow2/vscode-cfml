{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "outDir": "./out",
    "lib": [
      "es2017",
      "es2018.regexp"
    ],
    "sourceMap": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitThis": true
  },
  "exclude": [
    "node_modules"
  ]
}